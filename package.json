{
    "name": "node_js_initial_setup",
    "version": "1.0.0",
    "description": "Starter Template For NODEJS Project",
    "main": "src/server.ts",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "dotenvx run -f .env.development -- nodemon",
        "start": "tsc && dotenvx run -f .env.production -- node ./dist/server.js",
        "start:env:encrypt": "dotenvx encrypt -f .env.production",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "husky": "husky init"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.38.4",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "express-async-handler": "^1.2.0",
        "helmet": "^8.0.0",
        "source-map-support": "^0.5.21",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "zod": "^3.24.2",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@commitlint/types": "^19.8.0",
        "@eslint/js": "^9.22.0",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/source-map-support": "^0.5.10",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jiti": "^2.4.2",
        "lint-staged": "^15.4.3",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0"
    }
}
